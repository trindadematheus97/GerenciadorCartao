@model GerenciadorCartao.Models.Gasto

@{
    ViewData["Title"] = "Novo Gasto";
}

<h6 class="alert alert-success">Novo Gasto</h6>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="NovoGasto">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input asp-for="CartaoId" type="hidden" />

            <div class="form-group">
                <label asp-for="Descricao" class="control-label col-form-label-sm"></label>
                <input asp-for="Descricao" class="form-control form-control-sm" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Valor" class="control-label col-form-label-sm"></label>
                <input asp-for="Valor" class="form-control form-control-sm" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success btn-sm" /> &emsp;
                <a asp-action="ListagemGasto" asp-route-cartaoId="@Model.CartaoId">Voltar</a>
            </div>
        </form>
    </div>
</div>